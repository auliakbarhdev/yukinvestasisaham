---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import GuideSection from "@components/ui/blocks/GuideSection.astro";

// Import necessary images
import personWorking from "@images/man-checking-stock-market-data-tablet.jpg";
import { SITE } from "@data/constants";
import { socialLinks } from "@utils/navigation";

import guide1 from "@images/guides/guide-1.png";
import guide2 from "@images/guides/guide-2.png";
import guide3 from "@images/guides/guide-3.jpg";
import HeroSectionAlt from "../components/sections/landing/HeroSectionAlt.astro";

interface Guides {
  title: string;
  subTitle?: string;
  orderedList?: boolean;
  list?: string[];
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
  imgThree?: any;
  imgThreeAlt?: string;
  imageOnBottom?: boolean;
}

const guides: Guides[] = [
  {
    title: "Syarat Open Account Mirae Asset Sekuritas Online",
    subTitle:
      "Berikut adalah syarat untuk membuka akun di Mirae Asset Sekuritas Online:",
    orderedList: true,
    list: [
      "Pendaftaran akun regular.",
      "Warga negara Indonesia only (WNA dapat mendaftar dengan mengisi form fisik).",
      "Siapkan foto KTP, NPWP (jika ada), Nomor HP Aktif dan Nomor Rekening Bank",
      "Minimal deposit awal 10jt, deposit dilakukan setelah mendapat rekening investor."
    ],
    single: true,
    imgOne: personWorking,
    imgOneAlt: "Person working in the office"
  },
  {
    title: "Yang Perlu Diperhatikan Dalam Mengisi Online Form",
    orderedList: false,
    list: [
      "Pastikan email dan no hp yang diinput adalah valid.",
      "No RT/RW jika tidak ada diisi angka 0. No ext tel kantor jika tidak ada diisi angka 0.",
      "Kolom pengisian kode referal diisi kode referal Pak Kevin: 3102663",
      "Jika calon nasabah adalah Mahasiswa, Ibu Rumah Tangga, atau belum bekerja, data pekerjaan bisa mengisi sebagai trader saham, panduan pengisian hubungi Pak Kevin. Klik tombol wa di sebelah kanan bawah.",
      "Harap dicatat di tempat lain user id, password, dan pin yang sudah dibuat"
    ]
  },
  {
    title: "Contoh Foto Persyaratan Yang Benar",
    orderedList: false,
    single: false,
    imgOne: guide1,
    imgOneAlt: "Blueprints and digital tablet with construction plans.",
    imgTwo: guide2,
    imgTwoAlt: "Person working in the office",
    imgThree: guide3,
    imgThreeAlt: "Person working in the office",
    imageOnBottom: true
  },
  {
    title: "Step Open Account Dengan Mengisi Form Fisik",
    orderedList: true,
    list: [
      "Open account dengan mengisi form fisik berlaku bagi calon nasabah WNA, Institusi, atau individu yang pernah memiliki akun Mirae Asset sudah close account",
      "Request form fisik ke Pak Kevin via WA.",
      "Tanda tangan diatas Materai 10.000.",
      "Lampirkan dokumen pendukung (copy KTP, NPWP jika ada dan cover buku tabungan).",
      "Form yang sudah lengkap diisi dikirim ke Mirae Asset Sekuritas Indonesia Pluit Jakarta Utara dengan penerima Pak Kevin."
    ]
  }
];

const pageTitle: string = `Cara Buka Akun | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://yukinvestasisaham.com/services",
    "url": "https://yukinvestasisaham.com/services",
    "name": "Buka Akun | YukInvestasiSaham",
    "description": "Kami adalah bagian dari Mirae Asset, sebuah perusahaan investasi global yang berkomitmen untuk membantu Anda mencapai tujuan keuangan Anda. Dengan pengalaman bertahun-tahun di industri ini, kami menawarkan solusi investasi yang inovatif dan disesuaikan dengan kebutuhan Anda.",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://yukinvestasisaham.com",
      "name": "YukInvestasiSaham",
      "description": "Kami hadir untuk membantu Anda dalam mengoptimalkan investasi saham Anda dengan panduan dan layanan terbaik dari Mirae Asset, salah satu perusahaan manajer investasi terkemuka di Indonesia."
    },
    "inLanguage": "id"
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Cara Memulai Membuka Akun Mirae Asset Sekuritas"
    subTitle="Hi Sobat Investor! Saya Kevin Wijaya, Investment Specialist Mirae Asset Sekuritas yang akan memandu pendaftaran akun saham Anda sampai aktif."
    btnExists={true}
    btnTitle="Jadwalkan Konsultasi"
    btnURL={socialLinks.whatsapp}
  />
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    guides.map(item =>
      <GuideSection
        title={item.title}
        subTitle={item.subTitle}
        list={item.list}
        orderedList={item.orderedList}
        single={item.single}
        imgOne={item.imgOne}
        imgOneAlt={item.imgOneAlt}
        imgTwo={item.imgTwo}
        imgTwoAlt={item.imgTwoAlt}
        imgThree={item.imgThree}
        imgThreeAlt={item.imgThreeAlt}
        btnExists={item.btnExists}
        btnTitle={item.btnTitle}
        btnURL={item.btnURL}
        imageOnBottom={item.imageOnBottom}
      />)
  }

  <HeroSectionAlt
    title="Mulai Investasi"
    subTitle="Investasi yang Tepat, Masa Depan yang Cerah"
    url="https://login.miraeasset.co.id/registration/oe?3102663="
  />
</MainLayout>
